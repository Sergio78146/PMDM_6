<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivImagenSerie"
        android:layout_width="80dp"
        android:layout_height="120dp"
        android:contentDescription="@string/pelicula_imagen"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTituloSerie"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="TÃ­tulo de la serie"
        app:layout_constraintTop_toTopOf="@id/ivImagenSerie"
        app:layout_constraintBottom_toBottomOf="@id/ivImagenSerie"
        app:layout_constraintStart_toEndOf="@id/ivImagenSerie"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTemporadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/ivImagenSerie"
        app:layout_constraintTop_toBottomOf="@id/tvTituloSerie"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
