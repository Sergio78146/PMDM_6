<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.PRACTICA6" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Background color for app windows -->
        <item name="android:windowBackground">@color/background_color</item>

        <!-- Customize the action bar -->
        <item name="actionBarTheme">@style/ActionBarTheme</item>
    </style>

    <!-- Theme for app without action bar -->
    <style name="Theme.PRACTICA6.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Customize action bar -->
    <style name="ActionBarTheme" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <!-- Customize action bar title text style -->
    <style name="ActionBarTitleText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Customize button style -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Theme overlay for AppBar -->
    <style name="Theme.PRACTICA6.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Theme overlay for Popup -->
    <style name="Theme.PRACTICA6.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
